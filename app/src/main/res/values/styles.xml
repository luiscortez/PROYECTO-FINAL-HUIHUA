<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="beginnerTheme" parent="android:Theme">
        <item name="android:background">#c8853e</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/actionBarJP</item>
    </style>

    <style name="actionBarJP" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#c8853e</item>
    </style>

    <style name="gameTheme" parent="AppTheme">
        <item name="android:background">#c8853e</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="aboutOf" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="winnerTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#8888FF</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style
        name="playersTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="voidCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/libre</item>
        <item name="android:contentDescription">@string/freeDescrContent</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#591449</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleText.xlarge">
        <item name="android:textSize">100sp</item>
        <item name="android:paddingBottom">80dp</item>
    </style>



    <style name="titleText.Botones">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/principal_button</item>
        <item name="android:shadowColor">#591449</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="titleText.Botones.land">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="titleText.xlarge.Botones">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/principal_button</item>
        <item name="android:shadowColor">#591449</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>
