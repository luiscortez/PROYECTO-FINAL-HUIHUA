<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"
                />

            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#FFFFFF"
                android:startColor="#0FFFDF"
                android:endColor="#0FFFDF"
                android:type="linear"
                />

            <padding
                android:top="15dp"
                android:bottom="15dp"
                />

            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"
                />

            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#FF0FDF"
                android:startColor="#B53CA5"
                android:endColor="#FF91F0"
                android:type="linear"
                />

            <padding
                android:top="15dp"
                android:bottom="15dp"
                />

            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>

</selector>